<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="refresh_joint_events" model="ir.cron">
           <field name="name">Refresh Joint Events</field>
           <field name="model_id" ref="model_joint_calendar"/>
           <field name="state">code</field>
           <field name="code">model.action_cron_update_events()</field>
           <field name="nextcall" eval="(DateTime.now() + timedelta(hours=1)).strftime('%Y-%m-%d %H:%M:%S')" />
           <field name="user_id" ref="base.user_root"/>
           <field name="interval_number">1</field>
           <field name="interval_type">hours</field>
           <field name="numbercall">-1</field>
           <field name="doall">True</field>
        </record>

        <record id="invoke_alarm" model="ir.cron">
           <field name="name">Notify About Joint Event</field>
           <field name="model_id" ref="model_calendar_alarm_manager"/>
           <field name="state">code</field>
           <field name="code">model.action_next_mail_joint()</field>
           <field name="nextcall" eval="(DateTime.now() + relativedelta(minutes=59)).strftime('%Y-%m-%d %H:%M:%S')" />
           <field name="user_id" ref="base.user_root"/>
           <field name="interval_number">60</field>
           <field name="interval_type">minutes</field>
           <field name="numbercall">-1</field>
           <field name="doall">True</field>
        </record>

    </data>
</odoo>
