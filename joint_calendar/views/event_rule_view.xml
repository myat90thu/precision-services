<?xml version="1.0"?>
<odoo>

    <record id="event_rule_view_form" model="ir.ui.view" >
        <field name="name">Event Creation Rule</field>
        <field name="model">event.rule</field>
        <field name="arch" type="xml">
            <form>
                <h1>
                    <field name="name"
                           class="oe_inline"
                           placeholder='Rule Description'
                    />
                </h1>
                <group>
                    <group string='Required'>
                        <field name='res_model'
                               options="{'no_quick_create':True, 'no_create_edit':True}"
                        />
                        <field name='field_name'
                               options="{'no_quick_create':True, 'no_create_edit':True}"
                        />
                        <field name='field_start'
                               options="{'no_quick_create':True, 'no_create_edit':True}"
                        />
                        <field name='field_atendees'
                               options="{'no_quick_create':True, 'no_create_edit':True}"
                        />
                    </group>
                    <group string='Optional'>
                        <field name='field_stop'
                               options="{'no_quick_create':True, 'no_create_edit':True}"
                        />
                        <field name='field_delay'
                               options="{'no_quick_create':True, 'no_create_edit':True}"
                               invisible='1'
                        />
                        <field name='field_all_day'
                               options="{'no_quick_create':True, 'no_create_edit':True}"
                               attrs="{'invisible':[('always_all_day','=',True)]}"
                        />
                        <field name='always_all_day'/>
                        <field name='field_description'
                               options="{'no_quick_create':True, 'no_create_edit':True}"
                        />
                        <field name="fields_extra_partner_id"
                               options="{'no_quick_create':True, 'no_create_edit':True}"
                        />
                    </group>
                </group>
                <notebook>
                    <page string='Technical'>
                        <group>
                            <field name="domain"
                                   widget="domain"
                                   options="{'model': 'res_model_domain'}"
                                   style="min-height:200px !important;"
                            />
                            <field name='action'
                                   options="{'no_quick_create':True, 'no_create_edit':True}"
                            />
                            <field name='res_model_domain' invisible='1'/>
                        </group>
                    </page>
                </notebook>
                <div class="oe_clear"/>
            </form>
        </field>
    </record>
    <record id="event_rule_view_tree" model="ir.ui.view">
        <field name="name">Event Creation Rules</field>
        <field name="model">event.rule</field>
        <field name="arch" type="xml">
            <tree string="Event Creation Rules">
                <field name="name"/>
                <field name='res_model'/>
            </tree>
        </field>
    </record>
    <record id="event_rule_action" model="ir.actions.act_window">
        <field name="name">Event Rules</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">event.rule</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new Event Rule
            </p>
            <p>
                Event Rules are used search objects and create events based on them and related configurations
            </p>
        </field>
    </record>

</odoo>
