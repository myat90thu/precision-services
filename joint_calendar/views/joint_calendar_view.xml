<?xml version="1.0"?>
<odoo>

    <record id="joint_calendar_view_form" model="ir.ui.view" >
        <field name="name">Joint Calendar</field>
        <field name="model">joint.calendar</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="buttons">
                        <button class="oe_stat_button"
                                type="object"
                                name="action_generate_events"
                                icon="fa-plus-square-o"
                        >
                            <div class="o_stat_info">
                                Generate<br/>Events
                            </div>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name"
                                   class="oe_inline"
                                   placeholder='Joint Calendar Title'
                            />
                        </h1>
                    </div>
                    <notebook>
                        <page string='Rules'>
                            <field name='rule_ids'/>
                            <div>
                                <p class="oe_grey">
                                    * Prepare the rules, how to find objects to generate events related to this joint
                                    calendar
                                </p>
                                <p class="oe_grey">
                                    * Object would not appear in calendar in case it doesn't have a start indicated
                                </p>
                                <p class="oe_grey">
                                    * Try to exlude unnecessary objects in order to make events' update faster
                                </p>
                                <p class="oe_grey">
                                    * If the same object was found twice by different rules, an event would be also
                                    generated twice. It is because essential parameters like atendees, start time,
                                    subjects may differ
                                </p>
                                <p class="oe_grey">
                                    * Users may observe only the events to which related objects they have access rights
                                </p>
                            </div>
                        </page>
                        <page string='Settings'>
                            <group>
                                <group string='Menu'>
                                    <field name='activate_menu'/>
                                    <field name='menu_id' invisible='1'/>
                                    <field name='action_id' invisible='1'/>
                                    <field name='sequence'/>
                                    <field name='private_menu'/>
                                    <field name='groups_ids'
                                           widget='many2many_tags'
                                           attrs="{'invisible':[('private_menu','!=','groups')],'required':[('private_menu','=','groups')]}"/>
                                </group>
                                <group string='Limitations'>
                                    <div col='6' colspan='6'>
                                        <p class="oe_grey"> To make events' update faster, limit the objects time range:</p>
                                    </div>
                                    <field name='time_limit'/>
                                    <field name='days_before' attrs="{'invisible':[('time_limit','=',False)]}"/>
                                    <field name='days_after' attrs="{'invisible':[('time_limit','=',False)]}"/>
                                </group>
                                <group string='Defaults'>
                                    <field name='default_alarm_ids' 
                                           widget='many2many_tags'
                                           domain="[('alarm_type', '!=', 'sms')]"
                                    />
                                </group>
                             </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="joint_calendar_view_tree" model="ir.ui.view">
        <field name="name">Joint Calendars</field>
        <field name="model">joint.calendar</field>
        <field name="arch" type="xml">
            <tree string="Joint Calendars">
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record id="joint_calendar_action" model="ir.actions.act_window">
        <field name="name">Joint Calendars</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">joint.calendar</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new Joint Calendar.
            </p>
            <p>
                Joint calendars are used to combine objects of a few different models in a one calendar view.
            </p>
            <p>
                Use it, for example, to observe and plan leads, phone calls and meeting together.
            </p>
        </field>
    </record>

</odoo>
